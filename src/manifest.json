{
  "name": "JIRA Clippy by ucpwang",
  "version": "0.0.7",
  "manifest_version": 2,
  "description": "Copy jira issues to your clipboard as 'Description (URL)'",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "32": "jira-clippy-logo-32.png",
    "64": "jira-clippy-logo-64.png",
    "128": "jira-clippy-logo-128.png"
  },
  "permissions" : [
    "tabs",
    "background",
    "clipboardWrite"
  ],
  "page_action": {
    "default_icon": "jira-clippy-logo-32.png",
    "default_title": "Copy",
    "default_popup": "popup.html"
  }
}
